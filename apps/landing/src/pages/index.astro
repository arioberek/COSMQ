---
import Layout from '../layouts/Layout.astro';
import AnimatedFrameworks from '../components/ui/animated-frameworks';
import { FeaturesSection } from '../components/features-section';
import { ScreenshotsSection } from '../components/screenshots-section';
import AlienLogo from '../assets/logos/alien.svg';
import TextLogo from '../assets/logos/text.svg';
import { HeroSection } from '../components/hero-section';
---

<Layout>
	<header class="fixed top-0 left-0 right-0 z-[100] bg-[rgba(10,10,15,0.8)] backdrop-blur-[12px] border-b border-white/[0.08]">
		<nav class="max-w-[1200px] mx-auto px-6 py-4 flex justify-between items-center">
			<a href="/" class="items-center no-underline">
				<img src={TextLogo.src} alt="COSMQ" class="h-8 w-auto opacity-95 md:block hidden" />
			</a>
			<div class="flex gap-4 md:gap-8 items-center">
				<a href="#features" class="text-[#b8b8c8] no-underline text-sm font-medium transition-colors duration-200 hover:text-[#f0f0f5]">Features</a>
				<a href="https://github.com/arioberek/COSMQ" class="text-[#b8b8c8] no-underline text-sm font-medium transition-colors duration-200 hover:text-[#f0f0f5] bg-[#1a1a24] px-4 py-2 rounded-lg border border-white/[0.08] hover:bg-[#13131a] hover:border-[#7c5cff]">GitHub</a>
			</div>
		</nav>
	</header>
	<main class="w-full overflow-x-hidden">
		<HeroSection client:load />

		<FeaturesSection client:load />

		<ScreenshotsSection client:load />

		<section class="py-16 pb-8 px-6 text-center bg-[#171717] border-y border-white/[0.08]">
			<h2 class="text-4xl mb-8">Supported Databases</h2>
			<div class="max-w-md mx-auto">
				<AnimatedFrameworks 
					cardTitle="Database Support"
					cardDescription="Connect to PostgreSQL, MySQL, MariaDB, SQLite, CockroachDB, MongoDB and more."
					client:load
				/>
			</div>
		</section>

		<footer class="py-12 px-6 text-center border-t border-white/[0.08]">
			<div class="max-w-[1200px] mx-auto flex flex-col items-center gap-4">
				<div class="flex items-center gap-3">
					<img src={AlienLogo.src} alt="COSMQ" width="28" height="28" class="opacity-70" />
					<p class="m-0 text-[#b8b8c8]">Â© 2026 COSMQ. Open Source Software.</p>
				</div>
				<div class="flex gap-6">
					<div class="flex gap-6">
						<a href="https://github.com/arioberek/COSMQ" class="text-[#b8b8c8] no-underline text-sm hover:text-[#9d85ff]">GitHub</a>
						<a href="https://github.com/arioberek/COSMQ/blob/main/LICENSE" class="text-[#b8b8c8] no-underline text-sm hover:text-[#9d85ff]">License</a>
						<a href="https://github.com/arioberek/COSMQ/issues" class="text-[#b8b8c8] no-underline text-sm hover:text-[#9d85ff]">Issues</a>
					</div>
				</div>
			</div>
		</footer>
	</main>
</Layout>
